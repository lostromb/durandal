<div class="container"> 
  <div class="container-background"></div>
  <div class="container-border">
  
    <div class="top_message_container">
      <div class="logo"> 
        <img src="https://botletstorage.blob.core.windows.net/static-template-images/fitbit%20ic_fitbit_logo.png">

      </div>

      <div class="top_message">
        <p class="title">Here's where you stand on the <br>leaderboard for step count</p>
        <!--p class="title">leaderboard compared to your friends</p-->

      </div>
      
    </div>

    <hr/>
    <div class="data_container">
      <div *ngFor="let user of entity.users">
        <div *ngIf="user.is_current_user" class="ranking_list_box_you">
          <div class="ranking_number_you">#{{user.rank_steps}}</div>
          <div *ngIf="user.avatar_url" class="user_image"><img src="{{user.avatar_url}}"></div>
          <div *ngIf="!user.avatar_url" class="user_image"><img src="https://botletstorage.blob.core.windows.net/static-template-images/fitbit%20user_image_2.png"></div>
          <div class="actual_data_box">
            <div class="username_you">{{user.name}}</div>
            <div class="data_number_you">{{user.step_count}}</div>
          </div>
        </div>
        <div *ngIf="user.is_current_user" class="ranking_list_box_you_background"></div>

        <div *ngIf="!user.is_current_user" class="ranking_list_box">
          <div class="ranking_number">#{{user.rank_steps}}</div>
          <div *ngIf="user.avatar_url" class="user_image"><img src="{{user.avatar_url}}"></div>
          <div *ngIf="!user.avatar_url" class="user_image"><img src="https://botletstorage.blob.core.windows.net/static-template-images/fitbit%20user_image_2.png"></div>
          <div class="actual_data_box">
            <div class="username">{{user.name}}</div>
            <div class="data_number">{{user.step_count}}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
